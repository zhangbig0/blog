@model System.Collections.Generic.IEnumerable<blog.Model.Article>
@{ ViewBag.Title = "文章列表页面"; }
<div class="col-md-8 container">
    <div class="card-deck">
        @foreach (var article in Model)
        {
            <div class="card m-3">
                <div class="card-header">
                    <h3 class="card-title">@article.Title</h3>
                </div>
                <img src="#" alt="Alternate Text" class="card-img-top" />

                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@article.Id" class="btn btn-primary m-1">查看</a>
                    <a href="#" class="btn btn-primary m-1">编辑</a>
                    <a href="#" class="btn btn-danger m-1">删除</a>
                </div>
            </div>
        }
    </div>
</div>
